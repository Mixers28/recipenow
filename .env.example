# RecipeNow Environment Variables

# Database
DATABASE_URL=postgresql://recipenow:recipenow@localhost:5432/recipenow
SQL_ECHO=false

# Redis / ARQ Job Queue
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Storage
STORAGE_BACKEND=local  # or 'minio'
STORAGE_DIR=/data/assets

# MinIO (if using S3-compatible storage)
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio
MINIO_SECRET_KEY=minio123
MINIO_BUCKET=recipes

# OCR
USE_GPU=false

# FastAPI
DEBUG=false
LOG_LEVEL=INFO

# Deployment
ENVIRONMENT=development  # or 'production'
API_URL=http://localhost:8000
FRONTEND_URL=http://localhost:3000
